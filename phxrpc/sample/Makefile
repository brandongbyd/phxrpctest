include /home/ubuntu/PhxRPC/phxrpc/phxrpc.mk

LDFLAGS := -L$(PHXRPC_ROOT)/lib -lphxrpc $(LDFLAGS)

# choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

SVR_OBJS = search.pb.o \
		search_service_impl.o \
		phxrpc_search_service.o \
		phxrpc_search_dispatcher.o \
		search_server_config.o \
		search_main.o

CLI_OBJS = search.pb.o \
		search_client.o \
		phxrpc_search_stub.o

TARGETS = libsearch_client.a search_main search_tool_main

all: $(TARGETS)

search_main: $(SVR_OBJS)
	$(LINKER) $^ $(LDFLAGS) -o $@

libsearch_client.a: $(CLI_OBJS)
	$(AR) $@ $^

search_tool_main: phxrpc_search_tool.o search_tool_impl.o search_tool_main.o
	$(LINKER) $^ -L. -lsearch_client $(LDFLAGS) -o $@

########## message ##########

search.pb.cc: search.pb.h

search.pb.h: search.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_search_stub.cpp: phxrpc_search_stub.h
phxrpc_search_stub.o: phxrpc_search_stub.h
search_client.cpp: phxrpc_search_stub.h
search_client.o: phxrpc_search_stub.h

phxrpc_search_stub.h: search.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d .

########## service ##########

phxrpc_search_service.cpp: phxrpc_search_service.h
phxrpc_search_service.o: phxrpc_search_service.h
search_service_impl.cpp: phxrpc_search_service.h
search_service_impl.o: phxrpc_search_service.h
phxrpc_search_dispatcher.cpp: phxrpc_search_service.h
phxrpc_search_dispatcher.o: phxrpc_search_service.h

phxrpc_search_service.h: search.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d .

########## tool ##########

phxrpc_search_tool.cpp: phxrpc_search_tool.h
phxrpc_search_tool.o: phxrpc_search_tool.h
search_tool_impl.cpp: phxrpc_search_tool.h
search_tool_impl.o: phxrpc_search_tool.h
search_tool_main.cpp: phxrpc_search_tool.h
search_tool_main.o: phxrpc_search_tool.h

phxrpc_search_tool.h: search.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d .

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

